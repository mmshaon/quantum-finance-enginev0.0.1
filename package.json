{
  "name": "quantum-finance-engine",
  "version": "1.0.0",
  "private": true,
  "description": "Next-generation financial management & operations engine",
  "author": "Mohammad Maynul Hasan <creator@alphaultimate.com>",
  "license": "PROPRIETARY",
  "workspaces": [
    "apps/*",
    "packages/*",
    "database"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "setup:db": "node scripts/setup-database.js",
    "deploy": "node scripts/deploy-vercel.js",
    "deploy:web": "cd apps/web && vercel --prod",
    "deploy:api": "cd apps/api && vercel --prod",
    "db:generate": "npm run generate --workspace=database",
    "db:push": "npm run push --workspace=database",
    "db:migrate": "npm run migrate --workspace=database",
    "db:seed": "npm run seed --workspace=database",
    "db:studio": "npm run studio --workspace=database"
  },
  "devDependencies": {
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "pdfkit": "^0.17.2",
    "sharp": "^0.34.5",
    "zod": "^4.3.6"
  }
}
